<Window x:Class="YukarinetteYoutubeLivePlugin.OptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YukarinetteYoutubeLivePlugin"
        mc:Ignorable="d"
        Title="YoutubeLive コメント投稿" Height="230" Width="480">
	<Grid>
		<Grid Margin="0,0,0,70">
			<Grid Margin="10,10,10,80">
				<TextBlock Text="チャンネルID" Margin="5,5,360,5"/>
				<TextBox Name="YoutubeChannelIdTextBox" Text="" Margin="110,5,5,5"/>
			</Grid>
			<Grid Margin="10,45,10,45">
				<TextBlock Text="APIキー" Margin="5,5,360,5"/>
				<TextBox Name="YoutubeApiKeyTextBox" Text="" Margin="110,5,5,5"/>
			</Grid>
			<Grid Margin="10,80,10,10">
				<TextBlock Text="送信遅延 (秒)" Margin="5,5,360,5"/>
				<TextBox Name="YoutubeTxDelayTextBox" Text="" Margin="110,5,305,5"/>
			</Grid>
		</Grid>
		<Grid Margin="0,140,0,0">
			<Grid Margin="240,10,10,10">
				<Button Name="OkButton" Click="OkButton_Click" IsDefault="True" Content="OK" Margin="5,5,120,5"/>
				<Button Name="CancelButton" IsCancel="True" Content="キャンセル" Margin="120,5,5,5"/>
			</Grid>
		</Grid>
	</Grid>
</Window>
